<assembly>
    <id>${assembly.id}</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/dist/wildfly-${wildfly.version}</directory>
            <outputDirectory>${app.install.dir}/server</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependencies</directory>
            <outputDirectory>${app.install.dir}/server/standalone/deployments</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>